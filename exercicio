// 3.

let primeiro = Number(prompt("Digite um numero"));
let segundo = Number(prompt("Digite outro numero"));


function somas(primeiro, segundo) {
    const soma = primeiro + segundo
    return soma
}


function subtracoes(primeiro, segundo) {
    const subtracao = primeiro - segundo
    return subtracao
}


function multiplicacoes(primeiro, segundo) {
    const multiplicacao = primeiro * segundo
    return multiplicacao
}


function divisoes(primeiro, segundo) {
    const divisao = primeiro / segundo
    return divisao
}


console.log(somas(primeiro, segundo));
console.log(subtracoes(primeiro, segundo));
console.log(multiplicacoes(primeiro, segundo));
console.log(divisoes(primeiro, segundo));
